<%- include("partials/head.ejs") %>

<main class="container">
  <h1 class="text-center"><%= title %></h1>
  <div class="text-right">
    <a class="add-button" href="/add">Agregar Tarea</a>
  </div>
  <ul class="task-list">
    <% if (tasks.length === 0) { %>
      <li>
        <b class="text-center">No tienes tareas por hacer 😃👌🏻</b>
      </li>
    <% } else { %>
      <% tasks.forEach(function(task) { %>
        <li class="<%= task.completed ? 'completed' : '' %>">
          <a href="/edit/<%= task.id %>"><%= task.title %></a>
          <% if (task.completed) { %>
            <a class="uncomplete-button" href="/uncomplete/<%= task.id %>">Desmarcar</a>
          <% } else { %>
            <a class="complete-button" href="/complete/<%= task.id %>">Completar</a>
          <% } %>
          <a class="delete-button" href="/delete/<%= task.id %>">Eliminar</a>
        </li>
      <% }); %>
    <% } %>
  </ul>
</main>


